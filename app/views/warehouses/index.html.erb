<%= render partial: "section" %>

<script id="warehouses-index-template" type="text/x-handlebars-template">
  <table>
    <tr class="table-header">
      <th>Warehouse Name</th>
      <th>Contact</th>
      <th>Address</th>
      <th>Province/State</th>
      <th>Country</th>
      <th>Email</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    {{#each warehouses}}
      <tr class="table-content">
        <td class="td-center">{{name}}</td>
        <td class="td-center">{{contact}}</td>
        <td class="td-center">{{address1}}<br>{{address2}}</td>
        <td class="td-center">{{state}}</td>
        <td class="td-center">{{country.name}}</td>
        <td class="td-center">{{email}}</td>
        <td class="td-center">
        {{#if status}}
          <input type="checkbox" checked disabled>
        {{else}}
          <input type="checkbox" disabled>
        {{/if}}
        </td>
        <td class="td-center"><a href="/warehouses/{{id}}">View</a></td>
        <td class="td-center"><a href="/warehouses/{{id}}/edit">Edit</a></td>
        <td class="td-center"><a href="/warehouses/{{id}}">Delete</a></td>
      </tr>
    {{/each}}
  </table>
</script>