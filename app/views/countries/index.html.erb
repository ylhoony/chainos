<section id="breadcrumb">
  Home > Ground Data > Countries
</section>

<section id="content">
  <div id="content-header">
    <h2>Countries</h2>
    <div class="create"><i class="far fa-plus-square fa-2x"></i></div>
  </div>
  <div id="content-table">
    <table>
        <tr class="table-header">
          <th>Country Name</th>
          <th>ISO Alpha-2 Code</th>
          <th>ISO Alpha-3 Code</th>
          <th>ISO Numeric Code</th>
          <th>Status</th>
          <th></th>
          <th></th>
        </tr>

    </table>
  </div>
  <div id="content-footer">
    <div class="create"><i class="far fa-plus-square fa-2x"></i></div>
  </div>
</section>


<script id="country-template" type="text/x-handlebars-template">
  <form>
    <td class="td-left"><input type="text" value="{{name}}" disabled></td>
    <td class="td-center"><input type="text" value="{{alpha_2_code}}" disabled></td>
    <td class="td-center"><input type="text" value="{{alpha_3_code}}" disabled></td>
    <td class="td-center"><input type="text" value="{{numeric_code}}" disabled></td>
    <td class="td-center"></td>
    <td class="td-center update"><button><i class="fas fa-exchange fa-sm" data-id="{{id}}"></i></button></td>
  </form>
  <td class="td-center delete"><button><i class="far fa-trash-alt fa-sm" data-id="{{id}}"></i></button></td>
</script>
