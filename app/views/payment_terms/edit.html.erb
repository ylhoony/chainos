<%= render partial: "section" %>

<script id="payment-term-form-template" type="text/x-handlebars-template">
  <form class="payment_term" id="payment_term" action="/payment_terms/{{paymentTerm.id}}" accept-charset="UTF-8" method="put">
  
    <input name="utf8" type="hidden" value="âœ“">
    
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <input value="{{paymentTerm.id}}" type="hidden" name="payment_term[account_id]" id="payment_term_account_id">

    <div class="field">
      <label for="payment_term_name">Payment Term Name: </label>
      <input type="text" name="payment_term[name]" id="payment_term_name" value="{{paymentTerm.name}}">
    </div>

    <div class="field">
      <label for="payment_term_days">Date or Net Days: </label>
      <input min="0" type="number" name="payment_term[days]" id="payment_term_days" value="{{paymentTerm.days}}"><br>
    </div>

    <div class="field">
      <label for="payment_term_payment_option_id">Payment Option: </label>
      <select name="payment_term[payment_option_id]" id="payment_term_payment_option_id">
        <option value="">Please select</option>
        {{#each paymentOptions}}
        {{displayOption this}}
        {{/each}}
      </select><br>
    </div>

    <div class="field">
      <label for="payment_term_trade_credit_rate">Trade Credit Rate: </label>
      <input type="text" name="payment_term[trade_credit_rate]" id="payment_term_trade_credit_rate" value="{{paymentTerm.trade_credit_rate}}"><br>
    </div>

    <div class="field">
      <label for="payment_term_trade_credit_days">Trade Credit Days: </label>
      <input type="number" name="payment_term[trade_credit_days]" id="payment_term_trade_credit_days" value="{{paymentTerm.trade_credit_days}}"><br>
    </div>

    <div class="field">
      <label for="payment_term_status">Status</label>
      {{#if paymentTerm.status}}
        <input value="false" type="hidden" name="payment_term[status]" id="payment_term_status">
        <input value="true" type="checkbox" name="payment_term[status]" id="payment_term_status" checked>
      {{else}}
        <input value="false" type="checkbox" name="payment_term[status]" id="payment_term_status">
        <input value="true" type="hidden" name="payment_term[status]" id="payment_term_status">
      {{/if}}
    </div>

    <div class="actions">
      <input type="submit" name="commit" value="Edit Payment Term" data-disable-with="Edit Payment Term">
    </div>

  </form>
</script>