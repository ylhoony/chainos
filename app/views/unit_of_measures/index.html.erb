<%= render partial: "section" %>

<script id="uoms-index-template" type="text/x-handlebars-template">
  <table>
    <tr class="table-header">
      <th>Name</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    {{#each unitOfMeasures}}
      <tr class="table-content">
        <td class="td-center">{{name}}</td>
        <td class="td-center">
        {{#if status}}
          <input type="checkbox" checked disabled>
        {{else}}
          <input type="checkbox" disabled>
        {{/if}}
        </td>
        <td class="td-center"><a href="/unit_of_measures/{{id}}">View</a></td>
        <td class="td-center"><a href="/unit_of_measures/{{id}}/edit">Edit</a></td>
        <td class="td-center"><a href="/unit_of_measures/{{id}}">Delete</a></td>
      </tr>
    {{/each}}
  </table>
</script>