<section id="breadcrumb">
  Home > <a href="/payment_options">Payment Options</a>
</section>

<section id="content">
  <header id="content-header">
    <h2>Payment Options</h2>
    <div class="create"><button><i class="far fa-plus fa-lg"></i></button></div>
  </header>
  <main id="content-main">
  </main>
  <footer id="content-footer">
    <div class="create"><button><i class="far fa-plus fa-lg"></i></button></div>
  </footer>
</section>

<script id="payment-option-index-template" type="text/x-handlebars-template">
  <table>
    <tr class="table-header">
      <th>id</th>
      <th>Name</th>
      <th></th>
    </tr>
    {{#each paymentOptions}}
    <tr class="table-content">
      <td class="td-center"><a data-id="{{id}}">{{id}}</a></td>
      <td class="td-center">{{name}}</td>
      <td class="td-center update"><a data-id="{{id}}"><button data-id="{{id}}"><i class="fas fa-exchange fa-sm" data-id="{{id}}"></i></button></a></td>
    </tr>
    {{/each}}
  </table>
</script>

