<section id="breadcrumb">
  Home > <a href="/accounts">Accounts</a>
</section>

<section id="content">
  <header id="content-header">
    <h2>Accounts</h2>
    <div class="create"><button><i class="far fa-plus fa-lg"></i></button></div>
  </header>
  <main id="content-main">
  </main>
  <footer id="content-footer">
    <div class="create"><button><i class="far fa-plus fa-lg"></i></button></div>
  </footer>
</section>

<script id="account-list-template" type="text/x-handlebars-template">
  <table>
    <tr class="table-header">
      <th>Account Name</th>
      <th>Country</th>
      <th>Currency</th>
      <th></th>
    </tr>
    {{> accountListPartial }}
  </table>
</script>

<script id="account-list-partial" type="text/x-handlebars-template">
  {{#each accounts}}
  <tr>
    <td><a href="/dashboard?id={{this.id}}" class="to-dashboard">{{this.name}}</a></td>
    <td>{{this.country.name}}</td>
    <td>{{this.currency.name}}</td>
    <td></td>
  </tr>
  {{/each}}
</script>

<script id="account-form-template" type="text/x-handlebars-template">
  <form class="new_account" id="new_account" action="/accounts" accept-charset="UTF-8" method="post">
  <input name="utf8" type="hidden" value="âœ“">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div class="field">
      <label for="account_name">Company Name: </label>
      <input type="text" name="account[name]" id="account_name">
    </div>

    <div class="field">
      <label for="account_currency_id">Base Currency: </label>
      <select name="account[currency_id]" id="account_currency_id">
        <option value="">Please select</option>
        {{#each currencies}}
        {{displayOptions this}}
        {{/each}}
      </select><br>
    </div>

    <div class="field">
      <label for="account_country_id">Country: </label>
      <select name="account[country_id]" id="account_country_id">
        <option value="">Please select</option>
        {{#each countries}}
        {{displayOptions this}}
        {{/each}}
      </select><br>
    </div>

      <input value="true" type="hidden" name="account[active]" id="account_active">

    <div class="actions">
      <input type="submit" name="commit" value="Create Account" data-disable-with="Create Account">
    </div>
  </form>
</script>