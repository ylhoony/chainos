<!DOCTYPE html>
<html>
  <head>
    <title>Chainos</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'normalize' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag params[:controller], media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.0.12/css/all.css" integrity="sha384-HX5QvHXoIsrUAY0tE/wG8+Wt1MwvaY28d9Zciqcj6Ob7Tw99tFPo4YUXcZw9l930" crossorigin="anonymous">
  </head>

  <body>
    <header>
      <% if current_page?(controller: "devise/sessions", action: "new") || current_page?(controller: "devise/registrations", action: "new") %>
      <% else %>
        <%= render partial: "layouts/header" %>
      <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      <%= render partial: "layouts/footer"%>
    </footer>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'main', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag params[:controller], 'data-turbolinks-track': 'reload' %>
  </body>
</html>
