<%= render partial: "section" %>

<script id="account-contact-form-template" type="text/x-handlebars-template">

  <form class="new_account_contact" id="new_account_contact" action="/account_contacts" accept-charset="UTF-8" method="post">
    <input name="utf8" type="hidden" value="âœ“">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div class="field">
      <label for="account_contact_first_name">First Name: </label>
      <input type="text" name="account_contact[first_name]" id="account_contact_first_name">
    </div>

    <div class="field">
      <label for="account_contact_last_name">Last Name: </label>
      <input type="text" name="account_contact[last_name]" id="account_contact_last_name">
